            android:layout_weight="1"
            android:text="C"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:background="#8FBA1A"
            android:gravity="center"
            android:layout_weight="1"
            android:text="D"
            android:textSize="40sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>












